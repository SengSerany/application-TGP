<h1>S'inscrire</h1>
<br />
<div class="container">
	<div class='container-fluid'>
<%= form_tag('/users', method: "post", class:'form-signin needs-validation') do %>
        <h1 class="h3 mb-3 font-weight-normal">Veuillez vous inscrire</h1>
        <div class="form"><br />
            <div class="col-sm">
            	<%= label_tag 'PrÃ©nom'%>
                <%= text_field_tag('first_name', '', class:'form-control', required:'true',placeholder:"First Name", autofocus:'')%>
            </div><br />
            <div class="col-sm">
            	<%= label_tag 'Nom'%>
                <%= text_field_tag('last_name', '', class:'form-control', required:'true',placeholder:"Last Name", autofocus:'')%>
            </div><br />
        </div>
        <div class="form">
            <div class="col">
            	<%= label_tag 'Description'%>
                <%= text_area_tag('description', '', class:'form-control', required:'true',placeholder:"Description", autofocus:'')%>
            </div><br />
        </div>
        <div class="form">
            <div class="col-sm">
            	<%= label_tag 'Ville'%>
                <%= text_field_tag('city_name', '', class:'form-control', required:'true',placeholder:"Ville", autofocus:'')%>
            </div><br />
            <div class="col-sm">
            	<%= label_tag 'Age'%>
                <%= text_field_tag('age', '', class:'form-control', required:'true',placeholder:"Age", autofocus:'')%>
            </div><br />
        </div>
        <div class="form">
            <div class="col-sm">
            	<%= label_tag 'Email'%>
                <%= text_field_tag('email', '', class:'form-control', required:'true',placeholder:"Email address", autofocus:'')%>
            </div><br />
        </div>
        <div class="form">
            <div class="col-sm">
            	<%= label_tag 'Mot de passe'%>
                <%= text_field_tag('password', '', id:'inputPassword', type:'password', class:'form-control', placeholder:"Password", required:'true') %>
            </div><br />
            <div class="col-sm">
            	<%= label_tag 'Confirmation de mot de passe'%>
                <%= text_field_tag('password_confirmation', '', id:'confirmPassword', type:'password', class:'form-control', placeholder:"Password", required:'true') %>
            </div><br />
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">S'inscrire</button>
    <%end%><br />
</div>